{
    "manifest_version": 3,
    "name": "JumpScare Extension",
    "version": "1.0",
    "description": "Takes a photo of you when you open a chrome session!",
    "permissions": [
        "tabs",
        "activeTab",
        "downloads",
        "scripting",
        "storage",
        "background"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "web_accessible_resources": [
        {
            "resources": ["start.html"],
            "matches": ["<all_urls>"]
        }
    ]
}
